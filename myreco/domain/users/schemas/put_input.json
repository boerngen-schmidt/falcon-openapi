{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Recommendations Users",
    "type": "array",
    "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name", "email", "password", "grants"],
        "properties": {
            "id": {"type": "string"},
            "name": {"type": "string"},
            "email": {"type": "string"},
            "password": {"type": "string"},
            "grants": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {"$ref": "schema:grants.json"}
            }
        }
    }
}
