{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Recommendations Users",
    "type": "array",
    "minItems": 1,
    "items": {
        "type": "object",
        "additionalProperties": false,
        "minProperties": 2,
        "required": ["email"],
        "properties": {
            "name": {"type": "string"},
            "email": {"type": "string"},
            "password": {"type": "string"},
            "grants": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {"$ref": "schema:grants.json"}
            }
        }
    }
}
